<!DOCTYPE html>

<html data-theme="dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego's | Edit Set</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="shortcut icon" href="images/favicon.ico" />
    <link rel="icon" sizes="2x32 64x64" href="images/favicon-32x32.png" />
    <link rel="icon" sizes="16x16" href="images/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/images/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/images/android-chrome-512x512.png">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/navbar', {page: '' }) %>

    <!-- Hero -->
    <div class="container mx-auto p-4 mt-10">
      <div class="hero bg-base-300 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold green_gradient">Edit Set: <%= set.name %></h1>

            <p class="py-6 text-gray-400">
                Use the below form to update the <%= set.name %> Set.
            </p>
          </div>
        </div>
      </div>

      <br />
      <form  action="/lego/editSet" method="POST">
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0"
        >
          <div>
            <div class="mb-6">
              <label for="name" class="block text-gray-400 font-medium"
                >Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                value="<%= set.name %>"
                required=""
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
            <div class="mb-6">
              <label for="year" class="block text-gray-400 font-medium"
                >Year</label
              >
              <input
                type="number"
                id="year"
                name="year"
                value="<%= set.year %>"
                required=""
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
          </div>
          <div>
            <div class="mb-6">
              <label for="num_parts" class="block text-gray-400 font-medium"
                >Number of Parts</label
              >
              <input
                type="number"
                id="num_parts"
                name="num_parts"
                value="<%= set.num_parts %>"
                required=""
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
            <div class="mb-6">
              <label for="img_url" class="block text-gray-400 font-medium"
                >Image URL</label
              >
              <input
                type="url"
                id="img_url"
                name="img_url"
                value = "<%= set.img_url %>"
                required=""
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
          </div>

          <div>
            <div class="mb-6">
              <label for="theme_id" class="block text-gray-400 font-medium"
                >Theme</label
              >
              <select
                id="theme_id"
                name="theme_id"
                value="<%= set.theme_id %>"
                required=""
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              >
              <% themes.forEach(theme=>{ %><option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>"><%= theme.name %></option><% }) %>
              </select>
            </div>

            <div class="mb-6">
              <label for="set_num" class="block text-gray-400 font-medium"
                >Set Num</label
              >
              <input
                type="text"
                readonly
                id="set_num"
                name="set_num"
                value="<%= set.set_num %>"
                class="w-full cursor-not-allowed border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
          </div>
        </div>

        <div class="mt-6 flex items-center">
          <button
          type="submit"
              class="btn h-10 mr-2 hover:text-green-400 hover:border-emerald-400  text-black bg-green-400 "
            >
              UPDATE SET
            </button>

          <a href="/lego/deleteSet/<%= set.set_num %>" class="btn h-10 hover:text-red-500 hover:border-red-500  text-black bg-red-500 ">
              DELETE SET
            </a>
        </div>
      </form>
    </div>
  </body>
</html>
