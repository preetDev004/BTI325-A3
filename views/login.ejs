<!DOCTYPE html>

<html data-theme="dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection | Log In</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="shortcut icon" href="images/favicon.ico" />
    <link rel="icon" sizes="2x32 64x64" href="images/favicon-32x32.png" />
    <link rel="icon" sizes="16x16" href="images/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/images/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/images/android-chrome-512x512.png">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/navbar', {page: '/login' }) %>

    <!-- Hero -->
    <div class="container mx-auto p-4 mt-10">
      <div class="hero bg-base-300 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold green_gradient">Log In</h1>

            <p class="py-6 text-gray-400">
                Please provide your credentials below to access your existing account
            </p>
          </div>
        </div>
      </div>

      <br />
      <form id="myForm" class="mx-1 w-full" action="/login" method="post">
        <div
          class="grid grid-cols-1 gap-6 gap-y-0"
        >
          <div class="w-full">
            <div class="mb-6 w-full">
              <label for="userName" class="block text-gray-400 font-medium"
                >User Name</label
              >
              <input
                type="text"
                id="userName"
                value="<%= userName %>"
                name="userName"
                placeholder="User Name"
                required=""
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
            <div class="mb-6">
              <label for="password" class="block text-gray-400 font-medium"
                >Password</label
              >
              <input
                type="password"
                id="password"
                name="password"
                required=""
                placeholder="Password"
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
          
        <div class="mt-6 flex flex-col items-center">
          <button
          type="submit"
              class="btn h-10 w-full hover:text-green-400 text-black bg-green-400 "
            >
              Log in
            </button>
            <p class="p-2"><span>Don't have an accont? </span><a class="text-green-400 underline" href="/register">Sign In</a></p>
        </div>
      </form>
    </div>
    <% if(errorMessage){ %>
      <div id="error-message" class="hero absolute w-full left-0 z-20 top-16">
        <div class="alert alert-error w-[90%] h-12 flex gap-5 justify-center items-center ">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 2424">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= errorMessage %></span>
        </div>
      </div>
    <% } %>
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
    const errorMessage = document.getElementById("error-message");
    if (errorMessage) {
      errorMessage.style.opacity = 1; 
      setTimeout(function() {
        errorMessage.style.transition = "opacity 0.6s ease"; 
        errorMessage.style.opacity = 0;
        setTimeout(function() {
          errorMessage.style.display = "none"; 
        }, 600);
      }, 4000);
    }
  });
    </script>
</html>
