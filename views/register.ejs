<!DOCTYPE html>

<html data-theme="dark" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection  | Sign In</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="shortcut icon" href="images/favicon.ico" />
    <link rel="icon" sizes="2x32 64x64" href="images/favicon-32x32.png" />
    <link rel="icon" sizes="16x16" href="images/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/images/android-chrome-192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/images/android-chrome-512x512.png">
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/navbar', {page: '/register' }) %>

    <!-- Hero -->
    <div class="container mx-auto p-4 mt-10">
      <div class="hero bg-base-300 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold green_gradient">Register</h1>

            <p class="py-6 text-gray-400">
                Provide your credentials below to create your new account!
            </p>
          </div>
        </div>
      </div>

      <br />
      <% if(successMessage){ %>
        <div class="alert"><svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 2424"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 90 0118 0z" /></svg><span><%= successMessage %></span></div><br /><a href="/login" class="btn h-10 mr-2 hover:text-green-400 hover:border-emerald-400  text-black bg-green-400 ">Proceed to Log in</a>
      <% } else { %>
      <form class="mx-1 w-full" action="/register" method="post">
        <div
          class="grid grid-cols-1 gap-6 gap-y-0"
        >
          <div class="w-full">
            <div class="mb-6 w-full">
              <label for="userName" class="block text-gray-400 font-medium"
                >User Name</label
              >
              <input
                type="text"
                id="userName"
                value="<%= userName %>"
                name="userName"
                placeholder="User Name"
                required=""
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
            <div class="mb-6">
              <label for="password" class="block text-gray-400 font-medium"
                >Password</label
              >
              <input
                type="password"
                id="password"
                name="password"
                required=""
                placeholder="Password"
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
            <div class="mb-6">
              <label for="password2" class="block text-gray-400 font-medium"
                >Confirm Password</label
              >
              <input
                type="password"
                id="password2"
                name="password2"
                required=""
                placeholder="confirm Password"
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
            <div class="mb-6">
              <label for="email" class="block text-gray-400 font-medium"
                >E-mail Address</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required=""
                placeholder="E-mail Address"
                class="w-full border border-gray-300 bg-base-300 focus:outline-none rounded-md px-3 py-2 focus:border-green-400"
              />
            </div>
          
        <div class="mt-6 flex flex-col items-center">
          <button
          type="submit"
              class="btn h-10 w-full hover:text-green-400 text-black bg-green-400 "
              id="submitBtn"
            >
              Register
            </button>
            <p class="p-2"><span>Already have an accont? </span><a class="text-green-400 underline" href="/login">Log In</a></p>
        </div>
      </form>
      <% } %>
      <% if(errorMessage){ %>
        <div id="error-message" class="hero absolute w-full left-0 z-20 top-16">
          <div class="alert alert-error w-[90%] h-12 flex gap-5 justify-center items-center ">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 2424">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span><%= errorMessage %></span>
          </div>
        </div>
      <% } %>
    </div>
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", function() {

    const errorMessage = document.getElementById("error-message");
    const btn = document.getElementById("submitBtn");
    btn.addEventListener("click", ()=>{
      window.scrollTo({
      top: 0,
      behavior: "smooth"
    });
    })
    if (errorMessage) {
    
      errorMessage.style.opacity = 1; 
      setTimeout(function() {
        errorMessage.style.transition = "opacity 0.6s ease"; 
        errorMessage.style.opacity = 0;
        setTimeout(function() {
          errorMessage.style.display = "none"; 
        }, 600);
      }, 4000);
    }
  });
    </script>
</html>
